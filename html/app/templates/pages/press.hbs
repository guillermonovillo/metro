title: Press
---
  <article class="press">
      <section class="cover"></section>
      <section class="content">
         <div class="hgroup">
            <h1>Press</h1>
         </div>
         <aside class="aside">
            <ul class="aside-ul filter-options">
               <li><a href="#" class="art-filter active" data-filter-value="domestic">Domestic</a></li>
               <li><a href="press-international.html" class="art-filter" data-filter-value="international">International</a></li>

            </ul>
         </aside>
         <section class="main-content">


{{#each articles.posts}}
{{#unless nopublic}}
{{#if p1}}
            <article class="press-news-preview"  data-groups='["{{type}}"]'>
                <div class="thumbnail box-img hover-animation">
                     <img class="img" src="images/press/img/{{photo}}" alt="{{title}}" />
                   <div class="hover-content to-right">
                      <div>
                         <span><i>  
                          {{#unless pdf}}{{#unless video}}<a href="press/{{id}}.html">Read more</a>{{/unless}}{{/unless}}
               {{#if pdf.file}}<a href="press/{{pdf.file}}">Download PDF</a>{{/if}}
               {{#if video}}<a href="press/{{id}}.html">Play Video</a>{{/if}}
                        </i></span>
                      </div>
                   </div>
               </div> 
               <h2>{{author.source}} â€”</h2>
               <h1><a href="press/{{id}}.html">{{title}}</a></h1>
               <h3>{{author.name}} <time>{{fecha}}</time></h3>
               <p>{{short}}</p>
               {{#unless pdf}}{{#unless video}}<a href="press/{{id}}.html" class="link">Read more</a>{{/unless}}{{/unless}}
               {{#if pdf.file}}<a href="press/{{pdf.file}}" class="link">Download PDF</a>{{/if}}
               {{#if video}}<a href="press/{{id}}.html" class="link">Play Video</a>{{/if}}
            </article>
{{/if}}            
{{/unless}}
{{/each}}





         </section>
       <div class="loadMore-wrap"> 
          <a href="#" data-page="2" data-mode="domestic" class="load-more">Load More</a>
       </div>
      </section>
   </article>